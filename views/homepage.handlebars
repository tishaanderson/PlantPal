<div class="row">
  {{#each plants as |plant|}}

    <div class="col-md-6 col-sm-12">

      <div
        class="card mb-3"
        style="background-color: transparent; border: none;"
      >
        <div class="row g-0">
          <div class="col-md-4">
            <h5
              class="card-title"
              style="text-align: center;"
            >{{plant.plant_name}}</h5>
            <a href="{{plant.link_url}}" target="_blank">
              <img
                src="{{plant.image_url}}"
                class="img-fluid rounded-start"
                alt="{{plant.plant_name}}"
              />
            </a>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              {{!-- <p class="card-text">{{plant.description}}</p>
            <p class="card-text">Sunlight Requirements: {{plant.sunlight_requirements}}</p>
            <p class="card-text">Watering Needs: {{plant.watering_needs}}</p>
            <p class="card-text"><small class="text-body-secondary">Category: {{plant.category}}</small></p> --}}
            </div>
          </div>
        </div>
      </div>

    </div>

  {{/each}}
</div>